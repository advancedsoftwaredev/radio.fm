{
  "name": "server",
  "private": true,
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn watch-compile\" \"yarn watch-dev\"",
    "watch-compile": "swc src -w -s --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/server.js",
    "start": "ts-node src/server.ts",
    "seed": "dotenv -e ../../.env -- yarn prisma migrate reset -f && ts-node -P ./tsconfig.json ./src/seed.ts",
    "build": "yarn prisma generate && tsc && swc src -d dist && cp -r src/prisma/migrations dist/prisma/migrations && cp -r src/prisma/schema.prisma dist/prisma/schema.prisma",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "^4.3.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "busboy": "^1.6.0",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "get-audio-duration": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^3.3.4",
    "socket.io": "^4.5.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.9",
    "@types/bcrypt": "^5.0.0",
    "@types/busboy": "^1.5.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookiejar": "^2.1.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.30",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.3",
    "@types/socket.io": "^3.0.2",
    "chokidar": "^3.5.3",
    "concurrently": "^7.4.0",
    "cookiejar": "^2.1.3",
    "dotenv-cli": "^6.0.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.3.0",
    "tsc": "^2.0.4",
    "typescript": "^4.8.4"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  }
}
